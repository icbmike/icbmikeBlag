    <button class="menu-toggle-button"><i class="fa fa-bars"></i></button>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Posts")</li>
        <li>@Html.ActionLink("Archive", "Archive", "Posts")</li>
            
