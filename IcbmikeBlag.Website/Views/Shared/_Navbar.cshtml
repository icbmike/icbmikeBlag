        {
            <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
        }

        <li class="menu-item-right">
            @using (Html.BeginForm("Search", "Posts", FormMethod.Get))
            {
                <input class="search" type="text" name="searchterm" placeholder="Search..." />
            }
        </li>
    </ul>
    
    

</nav>